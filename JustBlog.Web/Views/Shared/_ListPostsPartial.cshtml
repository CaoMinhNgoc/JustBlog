@{

}
@model IList<PostViewModel>

@foreach (var post in Model)
{
    <div>
        <h5 class="text-primary">
            @Html.PostLink(post.Title,post.PostedOn.Year, post.PostedOn.Month,post.UrlSlug)
        </h5>
        <small class="m-0">Posted @post.PostedOn.FriendlyFormat() with rate @post.Rate by @post.ViewCount view(s)</small>
        <hr>
    </div>
}